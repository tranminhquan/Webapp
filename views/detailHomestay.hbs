            <h1 class="display-4">{{homestay.name}}</h1>
            <p class="rate mb-5">
                <span class="loc"><a href="#"><i class="icon-my_location"></i> {{homestay.address}} </a></span>
                <span class="star">
    							<i class="icon-star"></i>
    							<i class="icon-star"></i>
    							<i class="icon-star"></i>
    							<i class="icon-star"></i>
    							<i class="icon-star-o"></i>
